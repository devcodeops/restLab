{
  "name": "rest-lab",
  "private": true,
  "version": "1.0.0",
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "docker:up": "docker compose up",
    "docker:up:build": "COMPOSE_PARALLEL_LIMIT=2 docker compose up --build",
    "docker:down": "docker compose down",
    "docker:dev": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:dev:build": "COMPOSE_PARALLEL_LIMIT=2 docker compose -f docker-compose.yml -f docker-compose.dev.yml up --build",
    "docker:dev:down": "docker compose -f docker-compose.yml -f docker-compose.dev.yml down",
    "prisma:deploy": "prisma migrate deploy --schema prisma/schema.prisma"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22.10.0",
    "eslint": "^9.17.0",
    "jsdom": "^25.0.1",
    "prettier": "^3.4.2",
    "prisma": "^6.2.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "@vitest/coverage-v8": "^2.1.8"
  },
  "pnpm": {
    "overrides": {
      "glob@10.4.5": "^11.0.3"
    }
  },
  "dependencies": {
    "@prisma/client": "^6.2.1"
  }
}
